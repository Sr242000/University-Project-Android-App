<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".DrawingLetterMenu">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar4"
        android:layout_width="414dp"
        android:layout_height="67dp"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/letters_drawing"
        android:layout_width="171dp"
        android:layout_height="36dp"
        android:fontFamily="@font/helvetica_now_text_medium"
        android:text="Letters"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.023" />

    <TextView
        android:id="@+id/select_the_option_3"
        android:layout_width="236dp"
        android:layout_height="41dp"
        android:layout_marginTop="72dp"
        android:fontFamily="@font/helvetica_now_text_medium"
        android:text="Select The Option"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar4" />

    <Button
        android:id="@+id/drawing_capital_letter_button"
        android:layout_width="253dp"
        android:layout_height="60dp"
        android:layout_marginTop="100dp"
        android:fontFamily="@font/helvetica_now_text_medium"
        android:text="Capital Letters"
        style="@style/CustomButtonStyle"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.55"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/select_the_option_3" />

    <Button
        android:id="@+id/drawing_small_letter_button"
        android:layout_width="253dp"
        android:layout_height="60dp"
        android:layout_marginTop="116dp"
        android:fontFamily="@font/helvetica_now_text_medium"
        android:text="Small Letters"
        style="@style/CustomButtonStyle"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.525"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/drawing_capital_letter_button" />
</androidx.constraintlayout.widget.ConstraintLayout>